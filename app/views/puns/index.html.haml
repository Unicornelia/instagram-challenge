%div
.jumbotron
  %h1 Puns
  .panel
  - if @puns.any?
    - @puns.each do |pun|
      .well
        = image_tag pun.image.url(:thumb)
        %h3= link_to pun.name, pun_path(pun)
        %h3= link_to "Comment on #{pun.name}", new_pun_comment_path(pun)
        %h3= link_to "Edit #{pun.name}", edit_pun_path(pun)
        %h3= link_to "Delete #{pun.name}", pun_path(pun), method: :delete
  - else
    No puns yet
%div
  .well
    %a(href='/puns/new')
      %h3 Add a pun
